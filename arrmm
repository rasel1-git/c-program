/// max& min number
#include <stdio.h>
int main() {
int i,n,a[100],min,max;
printf("\n Enter the range of array: ");
scanf("%d",&n);
printf("\n Enter the Element of array ");
for(i=0;i<n;i++)
scanf("%d",&a[i]);
printf("\n After traversing .....\n");
for(i=0;i<n;i++)
printf("%4d\n",a[i]);
min=max=a[0];
for(i=1; i<n; i++)
{
if(min>a[i])
min=a[i];
if(max<a[i])
max=a[i];
}
printf("minimum of array is : %d",min);
printf("\nmaximum of array is : %d",max);
}
